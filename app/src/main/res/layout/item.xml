<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:id="@+id/cv"
    app:cardCornerRadius="@dimen/radius_cardview"
    app:cardElevation="@dimen/elevation_cardview"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/movie_photo"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/imageheight"
            android:contentDescription="@string/desc"
            android:scaleType="fitXY" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movie_name"
            android:textSize="30sp"
            android:textColor="@color/colorBlack"
            android:paddingTop="@dimen/dix"
            android:paddingLeft="@dimen/quinze"
            android:paddingRight="@dimen/quinze"
            android:paddingStart="@dimen/quinze"
            android:paddingBottom="@dimen/cinq"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movie_text"
            android:paddingLeft="@dimen/dix"
            android:paddingRight="@dimen/dix"
            android:paddingBottom="@dimen/dix"
            />
        <View
            android:background="@color/viewcolor"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/viewheight"
            android:layout_marginTop="@dimen/cinq" />
        <LinearLayout
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="@dimen/quinze"
                android:textStyle="bold"
                android:id="@+id/details"
                android:textColor="@color/colorViolet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details"
                android:background="@drawable/background_clickeditem"
                android:textAllCaps="true" />
            <TextView
                android:padding="@dimen/vingt"
                android:textStyle="bold"
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/share"
                android:textColor="@color/colorBlack"
                android:background="@drawable/background_clickeditem"
                android:textAllCaps="true" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
